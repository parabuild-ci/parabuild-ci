<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">

  <Properties>
    <Property name="appenderPatternLayout">%d{yyyy-MM-dd HH:mm:ss.SSS} %5p [%t]  %-40.40c{3}(%3L) - %m %n</Property>
    <Property name="logDirectory">${sys:catalina.home}/logs</Property>
  </Properties>

  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="${appenderPatternLayout}"/>
    </Console>
    <RollingFile name="logfile" fileName="${logDirectory}/parabuild.log"
                 filePattern="${logDirectory}/parabuild.log.%d{yyyy-MM-dd}.%i.log">
      <PatternLayout pattern="${appenderPatternLayout}"/>
      <Policies>
        <SizeBasedTriggeringPolicy size="1014 KB"/>
      </Policies>
      <DefaultRolloverStrategy max="50"/>
    </RollingFile>
  </Appenders>

  <Loggers>
    <Logger name="httpclient.wire" level="warn"/>
    <Logger name="net.sf.hibernate.connection.DriverManagerConnectionProvider" level="trace"/>
    <Logger name="net.sf.hibernate" level="warn"/>
    <Logger name="org.apache.axis.management.Registrar$ModelerBinding" level="FATAL"/>
    <Logger name="org.apache.axis" level="warn"/>
    <Logger name="org.apache.cactus" level="warn"/>
    <Logger name="org.apache.commons.digester" level="warn"/>
    <Logger name="org.apache" level="debug"/>
    <Logger name="org.directwebremoting" level="warn"/>
    <Logger name="org.parabuild.ci" level="warn"/>
    <Logger name="org.quartz" level="warn"/>
    <Root level="warn">
      <AppenderRef ref="logfile"/>
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>

</Configuration>
